" avoid conflicts with 't'
bind c fillcmdline tabopen
bind C current_url tabopen
bind ;C hint -W fillcmdline_notrail tabopen

" avoid conflits with 's'
bind l fillcmdline open search
bind L fillcmdline tabopen search

bind t scrollline 10
bind T tabprev
bind n scrollline -10
bind N tabnext
bind h scrollpx -50
bind H back
bind s scrollpx 50
bind S forward

bind <C-g> unfocus
bind --mode=insert <C-g> composite unfocus | mode normal
bind --mode=input <C-g> composite unfocus | mode normal
