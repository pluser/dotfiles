"1.1

loadplugins '\.(js|penta)$'
group user
highlight Hint font: bold 10px "Droid Sans Mono", monospace !important; margin: -.2ex; padding: 0 0 0 1px; outline: 1px solid rgba(0, 0, 0, .5); background: rgba(255, 248, 231, .8); color: black; text-transform: uppercase; font-size: 18px !important;
set strictfocus='chrome:*':laissez-faire,*:despotic
map -count -modes=b <C-g> <Esc>
map -modes=n b -ex :back
map -count -modes=n,v c <count>:tabopen<Space>
map -modes=n f -ex :forward
map -count -modes=n,v h -ex <count>:tabprevious
map -count -modes=n,v i <Nop>
map -count -modes=n,v n <count><Up>
map -count -modes=n,v N <count><scroll-up-page>
map -count -modes=n,v s -ex <count>:tabnext
map -count -modes=n <Space> -builtin <count>f
map -count -modes=n <S-Space> -builtin <count>F
map -count -modes=n,v t <count><Down>
map -count -modes=n,v T <count><scroll-down-page>
map -count -modes=n,v ZZ <Nop>
set hintkeys=uhetonasid

