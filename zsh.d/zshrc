#!/bin/zsh
# -*- mode: shell-script -*-

### Added by Zinit's installer
if [[ ! -f $HOME/.zinit/bin/zinit.zsh ]]; then
    print -P "%F{33}▓▒░ %F{220}Installing DHARMA Initiative Plugin Manager (zdharma/zinit)…%f"
    command mkdir -p "$HOME/.zinit" && command chmod g-rwX "$HOME/.zinit"
    command git clone https://github.com/zdharma-continuum/zinit "$HOME/.zinit/bin" && \
        print -P "%F{33}▓▒░ %F{34}Installation successful.%f" || \
        print -P "%F{160}▓▒░ The clone has failed.%f"
fi
source "$HOME/.zinit/bin/zinit.zsh"
autoload -Uz _zinit
(( ${+_comps} )) && _comps[zinit]=_zinit
### End of Zinit installer's chunk

# options
setopt ignoreeof # prevent logout with Ctrl-D

# history related
HISTFILE="${HOME}/.zhistory"
HISTSIZE=100000
SAVEHIST=1000000
setopt inc_append_history
setopt share_history

zinit light denysdovhan/spaceship-prompt
zinit light zsh-users/zsh-completions
zinit light zsh-users/zsh-autosuggestions

eval "$(zoxide init zsh)"

alias docker='podman'
alias hugo='podman run --rm -it -v "$(pwd)":/src -p 1313:1313 docker.io/klakegg/hugo:ext-pandoc'
alias pandoc='podman run --rm -it -v "$(pwd)":/data --user $(id -u):$(id -g) docker.io/pandoc/latex'
alias sage='podman run --rm -it -v "$(pwd)":/home/sage/host -p 8888:8888 docker.io/sagemath/sagemath'
alias aws='podman run --rm -it -v ~/.config/aws:/root/.aws -v "$(pwd)":/aws docker.io/amazon/aws-cli'
alias gcloud='podman run --rm -it -v ~/.config/gcloud:/root/.config gcr.io/google.com/cloudsdktool/cloud-sdk gcloud'
alias julia='podman run --rm -it -v "$(pwd)":/usr/myapp -w /usr/myapp docker.io/julia'
alias notebook='podman run --rm -it -p 8888:8888 -e JUPYTER_ENABLE_LAB=no -v "$(pwd)":/home/jovyan/work docker.io/jupyter/datascience-notebook'
alias sq='podman run --rm -it localhost/sequoia-sq'
